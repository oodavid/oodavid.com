{
  "name": "oodavid.com",
  "version": "1.0.0",
  "description": "Hugo generator for oodavid.com on netlify.com",
  "author": "David King",
  "license": "ISC",
  "main": "static/assets/js/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oodavid/oodavid.com-hugo.git"
  },
  "scripts": {
    "hugo:build": "hugo",
    "hugo:watch": "hugo server",

    "sass":       "node-sass themes/oodavid-stellar/static-src/sass/ --output themes/oodavid-stellar/static/css/ --source-map true --error-bell",
    "postcss":    "postcss themes/oodavid-stellar/static/css/*.css --use autoprefixer -d themes/oodavid-stellar/static/css/",
    "sass:build": "npm run sass && npm run postcss",
    "sass:watch": "npm run sass && npm run sass -- --watch themes/oodavid-stellar/static-src/sass/",

    "open": "opener http://localhost:1313",

    "build":  "npm-run-all -s sass:build hugo:build",
    "watch":  "npm-run-all -p sass:watch hugo:watch open"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^4.0.0",
    "node-sass": "^4.5.3",
    "opener": "^1.4.3"
  }
}
